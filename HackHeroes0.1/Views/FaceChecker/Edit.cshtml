@model HackHeroes.Application.HackHeroes.Commands.Classes.EditClass.EditClassCommand

@{
    ViewData["Title"] = "Edit";
}


<h1 class="text-theme">Edytuj</h1>

<h4 class="text-theme">Panel edycji klas:</h4>
<hr style="color:transparent;" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label text-theme" style="font-size: 22px;">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="btn-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary sub-btn card-btn btn-theme card-btn-theme" />
                    <a asp-action="ClassIndex" class="btn btn-primary sub-btn card-btn btn-theme card-btn-theme" style="white-space: nowrap;">Powrót</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
