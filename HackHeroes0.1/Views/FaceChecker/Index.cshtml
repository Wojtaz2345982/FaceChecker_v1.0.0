@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "HackHeroes";
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager
}


<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    <link href="~/css/index.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


</head>
<body>
    <div style="height: 100%;">
        <header class="gradient index-page-header">
            <div class="container-sm">
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-5" style="margin-top: 4%;">
                        <h2 class="py-2">Witaj w Face Checker!</h2>
                        <p>
                            Rozpocznij przygodę z nowoczesną edukacją wspieraną przez innowacyjne technologie! <br />Face Checker to Twój nowy partner w zarządzaniu obecnością na zajęciach.<br/> Nasza platforma wykorzystuje rozpoznawanie twarzy, aby zapewnić bezpieczne i efektywne śledzenie uczestnictwa, nie zapominając o prywatności.

                            <br/> Z Face Checker łatwo zapanujesz nad frekwencją uczniów oraz zaoszczędzisz czas. Ciesz się spokojem umysłu, wiedząc, że każda sesja edukacyjna jest dobrze dokumentowana.

                            @if (!(SignInManager.IsSignedIn(User)))
                            {
                            <br /> <span class="fw-bold">Dołącz do nas już dziś i wprowadź swoją edukację na nowy poziom!</span>
                                <br/><a class="loginBtn btn btn-outline-light btn-lg" asp-area="Identity" asp-page="/Account/Login">Zaloguj się</a>
                            }
                            
                        </p>
                       
                    </div>
                    <div class="col-md-6 img-fluid mt-4 ms-2">
                        <img class="img-with-shadow w-100" src="~/css/img/indexImg450w.png" alt="Face Checker image">
                    </div>
                </div>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#fff" fill-opacity="1" d="M0,192L48,176C96,160,192,128,288,138.7C384,149,480,203,576,224C672,245,768,235,864,208C960,181,1056,139,1152,117.3C1248,96,1344,96,1392,96L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
        </header>
        @if (!(SignInManager.IsSignedIn(User)))
        {
            <section class="registration" style="background: #fff;">
                <div class="container-md">
                    <div class="row text-md-center">
                        <h2>Jeśli jesteś nowym użytkownikiem zarejestruj się używając przycisku poniżej</h2>
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col-3 text-center">
                            <a class="gradient btn btn-primary text-light btn-outline-light btn-lg mt-2 p-3 border-black" asp-area="Identity" asp-page="/Account/Register">Zarejestruj</a>
                        </div>
                    </div>
                </div>
            </section>
        }
        <section class="description" style="background-color: whitesmoke;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#fff" fill-opacity="1" d="M0,224L48,218.7C96,213,192,203,288,170.7C384,139,480,85,576,80C672,75,768,117,864,154.7C960,192,1056,224,1152,224C1248,224,1344,192,1392,176L1440,160L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>
            <div class="container-md">
                <div class="row text-center mb-3">
                    <h1>Dowiedz się do więcej o naszej aplikacji</h1>
                </div>
                <div class="row justify-content-center text-center mt-5">
                    <div class="col-md-4 col-sm-6 revealsXFromLeft">
                        <svg xmlns="http://www.w3.org/2000/svg" width="65" height="65" fill="currentColor" class="bi bi-plugin" viewBox="0 0 16 16" x="0px" y="0px">
