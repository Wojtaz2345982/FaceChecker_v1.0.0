@model HackHeroes.Application.HackHeroes.Commands.Students.EditStudent.EditStudentCommand
@{
    ViewData["Title"] = "Edit Student";
}


<h4 class="text-theme">Panel edycji ucznia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label text-theme">Imię</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label text-theme">Nazwisko</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <input asp-for="Number" class="form-control" type="hidden" />


            <input asp-for="StudentKey" class="form-control" type="hidden" />
            <div class="btn-group">
                <input type="submit" value="Zapisz" class="btn btn-primary btn btn-theme card-btn-theme mt-3" />
                
            </div>
        </form>
    </div>
</div>


@if (Model.ImageUrl != null)
{
    <div id="studentImg">
        <img class="img-fluid" src="@Model.ImageUrl" alt="Obraz" style="border: 5px solid rgba(0, 154, 255, 1); margin-top:15px;" />
    </div>

}


<div class="col-md-4">
    <a asp-controller="Camera" asp-action="EditStudentImage" asp-route-studentKey="@Model.StudentKey" class="btn btn-primary btn-theme btn-block card-btn-theme">Edytuj zdjęcie ucznia</a>
</div>

<div class="form-group">
    <div class="btn-group">      
        <a asp-action="ClassIndex" class="btn btn-primary btn btn-theme btn btn-primary sub-btn card-btn btn-theme card-btn-theme" style="white-space: nowrap;">Powrót</a>
    </div>
</div>

<style>
    #studentImg {
        display: inline-flex;
        top: 30%;
        right: 20%;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}