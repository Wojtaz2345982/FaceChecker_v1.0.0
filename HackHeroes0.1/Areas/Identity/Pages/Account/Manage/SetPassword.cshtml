@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Ustaw hasło";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="textColor white-text">Ustaw swoje hasło</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    Nie masz lokalnej nazwy użytkownika/hasła dla tej witryny. Dodaj lokalne
    konto, dzięki czemu będziesz mógł zalogować się bez zewnętrznego logowania.
</p>
<div class="row">
    <div class="col-md-6 ms-md-5">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control textColor white-text" autocomplete="new-password" placeholder="Proszę wprowadzić nowe hasło." />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control textColor white-text" autocomplete="new-password" placeholder="Proszę potwierdzić nowe hasło." />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary textColor white-text bgColor bgColor myButton">Ustaw hasło</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
