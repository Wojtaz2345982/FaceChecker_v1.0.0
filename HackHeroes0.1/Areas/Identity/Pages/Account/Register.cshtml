@page
@model RegisterModel
@{
    ViewData["Title"] = "Zarejestruj się";
}

@* <h1 class="textColor white-text">@ViewData["Title"]</h1> *@

<div class="row justify-content-center mt-5">
    <div class="col-md-7 col-lg-6 col-xl-5 borderStyle border bgGradient pb-2">

        <h1 class="text-theme" style="text-align: center;">@ViewData["Title"]</h1>
        <hr class="text-theme" />
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-theme py-2 mb-3" style="text-align: center;">Stwórz nowe konto.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 text-theme input-box">
                <i class="bi bi-person-fill text-theme"></i>
                <input asp-for="Input.Email" class="form-control bgColor bgColor inputFeatures textColor white-text" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label text-theme">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-theme input-box">
                <i class="bi bi-lock-fill text-theme"></i>
                <input asp-for="Input.Password" class="form-control bgColor bgColor inputFeatures text-theme" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label text-theme">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-theme input-box">
                <i class="bi bi-unlock-fill text-theme"></i>
                <input asp-for="Input.ConfirmPassword" class="form-control bgColor bgColor inputFeatures text-themet" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" class="form-label text-theme">Potwierdź hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div style="text-align: center;" class="mt-4 mb-3">
                <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-primary neonButton">Zarejestruj się</button>
            </div>
            
        </form>
    </div>
</div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}